{
    "extends": [
        "solhint:recommended"
    ],
    "rules": {
        "prettier/prettier": "error",
        "avoid-throw": "off",
        "avoid-suicide": "error",
        "avoid-sha3": "warn",
        "compiler-version": [
            "error",
            ">=0.7.0 <0.9.0"
        ]
    },
    "plugins": [
        "prettier"
    ]
}